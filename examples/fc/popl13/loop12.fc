.vars {
  x1, x2
}

.pvars {
  x1', x2'
}

.trans t0 : n -> n {
  -1 * x1 + 1 * x2 <= 0,
  -1 * x1 + -1 * x2 <= -1,
  -1 * x1 + 1 * x1' = 0,
  2 * x1 + -1 * x2 + 1 * x2' = 1
}
.trans t1 : n -> n {
  -4 * x1 <= -1,
  -1 * x2 <= -1,
  2 * x1 + -5 * x1' <= 3,
  -2 * x1 + 5 * x1' <= 1,
  -1 * x2 + 1 * x2' = 1
}

